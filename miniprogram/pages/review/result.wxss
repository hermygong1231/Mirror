/* pages/review/result.wxss */
.page-container {
  min-height: 100vh;
  background: #f9fafb;
  padding-bottom: 60rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.analyzing-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx 80rpx;
  min-height: 70vh;
}

/* 脑图动画 */
.analyzing-brain {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 48rpx;
}

.analyzing-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 72rpx;
  z-index: 2;
}

.brain-circle {
  position: absolute;
  top: 50%;
  left: 50%;
  border-radius: 50%;
  border: 2rpx solid rgba(37, 99, 235, .2);
  transform: translate(-50%, -50%);
}

.brain-circle--1 {
  width: 120rpx;
  height: 120rpx;
  animation: brain-ripple 2s ease-out infinite;
}

.brain-circle--2 {
  width: 120rpx;
  height: 120rpx;
  animation: brain-ripple 2s ease-out infinite .6s;
}

.brain-circle--3 {
  width: 120rpx;
  height: 120rpx;
  animation: brain-ripple 2s ease-out infinite 1.2s;
}

@keyframes brain-ripple {
  0% {
    width: 120rpx;
    height: 120rpx;
    opacity: .6;
    border-color: rgba(37, 99, 235, .4);
  }
  100% {
    width: 280rpx;
    height: 280rpx;
    opacity: 0;
    border-color: rgba(37, 99, 235, 0);
  }
}

.analyzing-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 48rpx;
}

/* 金句轮播 */
.quote-container {
  text-align: center;
  padding: 32rpx 24rpx;
  max-width: 580rpx;
  opacity: 0;
  transform: translateY(16rpx);
  transition: opacity .4s ease, transform .4s ease;
}

.quote-container.quote-visible {
  opacity: 1;
  transform: translateY(0);
}

.quote-text {
  display: block;
  font-size: 30rpx;
  color: #374151;
  line-height: 1.8;
  font-style: italic;
  font-weight: 500;
}

.quote-author {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}

/* 进度点动画 */
.analyzing-dots {
  display: flex;
  gap: 16rpx;
  margin-top: 48rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #2563eb;
  animation: dot-bounce .8s ease-in-out infinite;
}

.dot--1 {
  animation-delay: 0s;
}

.dot--2 {
  animation-delay: .15s;
}

.dot--3 {
  animation-delay: .3s;
}

@keyframes dot-bounce {
  0%, 80%, 100% {
    opacity: .3;
    transform: scale(.8);
  }
  40% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* 结果头部 */
.result-header {
  background: #fff;
  padding: 32rpx;
  text-align: center;
}

.result-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

/* 结果区块 */
.result-section {
  padding: 12rpx 32rpx;
}

.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, .04);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.card-icon {
  font-size: 32rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.card-content {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.7;
}

/* 核心拆穿 */
.core-card {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  border: 2rpx solid #f59e0b;
  text-align: center;
  padding: 40rpx 32rpx;
}

.core-card.core-positive {
  background: linear-gradient(135deg, #dcfce7, #bbf7d0);
  border-color: #22c55e;
}

.core-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #92400e;
  line-height: 1.6;
}

.core-positive .core-text {
  color: #166534;
}

/* 偏差标签 */
.bias-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.bias-tag {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: #fef2f2;
  color: #dc2626;
  border-radius: 32rpx;
  font-weight: 500;
}

.bias-tag.bias-positive {
  background: #f0fdf4;
  color: #16a34a;
}

/* 行为原则 */
.principle-card {
  border-left: 8rpx solid #2563eb;
}

.principle-text {
  font-size: 34rpx;
  font-weight: 700;
  color: #2563eb;
  margin-top: 4rpx;
}

/* 行为模式对比 */
.pattern-compare {
  display: flex;
  align-items: stretch;
  gap: 16rpx;
  margin-top: 8rpx;
}

.pattern-item {
  flex: 1;
  padding: 20rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pattern-current {
  background: #fef2f2;
}

.pattern-good {
  background: #f0fdf4;
}

.pattern-suggest {
  background: #eff6ff;
}

.pattern-label {
  font-size: 22rpx;
  font-weight: 500;
  color: #9ca3af;
}

.pattern-current .pattern-label {
  color: #dc2626;
}

.pattern-good .pattern-label {
  color: #16a34a;
}

.pattern-suggest .pattern-label {
  color: #2563eb;
}

.pattern-text {
  font-size: 26rpx;
  color: #374151;
  line-height: 1.6;
  font-weight: 600;
}

.pattern-current .pattern-text {
  color: #991b1b;
}

.pattern-good .pattern-text {
  color: #166534;
}

.pattern-suggest .pattern-text {
  color: #1e40af;
}

.pattern-arrow {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #9ca3af;
  flex-shrink: 0;
}

/* 反馈 */
.feedback-section {
  padding: 40rpx 32rpx;
  text-align: center;
}

.feedback-title {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 28rpx;
  display: block;
}

.feedback-btns {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.feedback-btn {
  font-size: 30rpx;
  padding: 20rpx 48rpx;
  border-radius: 20rpx;
  border: 0;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.feedback-btn.agree {
  background: #2563eb;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(37, 99, 235, .25);
}

.feedback-btn.disagree {
  background: #fff;
  color: #2563eb;
  border: 2rpx solid #bfdbfe;
}

.feedback-done {
  font-size: 28rpx;
  color: #2563eb;
  font-weight: 500;
}

/* 底部操作 */
.action-section {
  padding: 24rpx 32rpx;
}

.btn-home {
  width: 100%;
  height: 96rpx;
  background: #2563eb;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}
