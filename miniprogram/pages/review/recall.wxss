/* pages/review/recall.wxss */
.page-container {
  min-height: 100vh;
  background: #f9fafb;
  padding-bottom: 140rpx;
}

.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #9ca3af;
  font-size: 28rpx;
}

/* 时间头部 */
.time-header {
  background: #fff;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time-badge {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.time-date {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 回顾卡片 */
.recall-section {
  padding: 24rpx 32rpx;
}

.recall-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 8rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, .04);
}

.recall-item {
  display: flex;
  padding: 28rpx 32rpx;
  gap: 20rpx;
}

.recall-icon {
  font-size: 36rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.recall-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.recall-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.recall-value {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
}

.recall-chosen {
  color: #2563eb;
  font-weight: 600;
}

.concern-text {
  color: #d97706;
}

.recall-divider {
  height: 1rpx;
  background: #f3f4f6;
  margin: 0 32rpx;
}

/* 底部 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, .06);
}

.btn-review {
  width: 100%;
  height: 96rpx;
  background: #2563eb;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}
