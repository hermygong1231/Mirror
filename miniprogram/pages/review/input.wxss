/* pages/review/input.wxss */
.page-container {
  min-height: 100vh;
  background: #f9fafb;
  padding-bottom: 140rpx;
}

.form-section {
  padding: 24rpx 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  padding: 8rpx 0 24rpx;
}

.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.label-required {
  color: #ef4444;
  margin-left: 8rpx;
  font-size: 24rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  box-sizing: border-box;
}

/* 结果评价 */
.outcome-type-list {
  display: flex;
  gap: 16rpx;
}

.outcome-type-btn {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all .2s;
}

.outcome-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.outcome-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.outcome-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.outcome-desc {
  font-size: 22rpx;
  color: #9ca3af;
}

.outcome-type-btn.outcome-positive-active {
  border-color: #16a34a;
  background: #f0fdf4;
}

.outcome-type-btn.outcome-positive-active .outcome-label {
  color: #16a34a;
}

.outcome-type-btn.outcome-negative-active {
  border-color: #dc2626;
  background: #fef2f2;
}

.outcome-type-btn.outcome-negative-active .outcome-label {
  color: #dc2626;
}

/* 错误类型 */
.error-type-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.error-type-btn {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all .2s;
}

.error-type-btn.type-active {
  border-color: #2563eb;
  background: #eff6ff;
}

.type-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.error-type-btn.type-active .type-label {
  color: #2563eb;
}

.type-desc {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 影响因素 */
.influence-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.influence-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all .2s;
}

.influence-btn.influence-active {
  border-color: #2563eb;
  background: #eff6ff;
}

.influence-check {
  font-size: 32rpx;
  flex-shrink: 0;
}

.influence-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.influence-label {
  font-size: 28rpx;
  color: #374151;
}

.influence-desc {
  font-size: 22rpx;
  color: #9ca3af;
}

.influence-detail-input {
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #6b7280;
}

/* 底部 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, .06);
}

.btn-row {
  display: flex;
  gap: 20rpx;
}

.btn-back {
  flex: 1;
  height: 96rpx;
  background: #f3f4f6;
  color: #374151;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}

.btn-submit {
  flex: 2;
  height: 96rpx;
  background: #2563eb;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}

.btn-submit.btn-disabled {
  background: #93c5fd;
  opacity: .6;
}
