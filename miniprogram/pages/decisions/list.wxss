/* pages/decisions/list.wxss */
.page-container {
  min-height: 100vh;
  background: #f9fafb;
  padding-bottom: 120rpx;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #fff;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.app-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #111827;
}

.app-subtitle {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.header-action {
  display: flex;
  align-items: center;
}

.action-btn {
  font-size: 28rpx;
  padding: 12rpx 20rpx;
  background: #f3f4f6;
  border-radius: 32rpx;
}

.ai-btn {
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  background: #eff6ff;
  color: #2563eb;
  border-radius: 32rpx;
  font-weight: 500;
}

/* 搜索栏 */
.search-bar {
  padding: 12rpx 32rpx 16rpx;
  background: #fff;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
}

.search-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
  height: 40rpx;
}

.search-clear {
  font-size: 26rpx;
  color: #9ca3af;
  padding: 4rpx 8rpx;
  flex-shrink: 0;
}

/* Tab */
.tab-bar {
  display: flex;
  gap: 0;
  background: #fff;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #6b7280;
  position: relative;
}

.tab-item.tab-active {
  color: #2563eb;
  font-weight: 600;
}

.tab-item.tab-active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background: #2563eb;
}

/* 列表 */
.list-container {
  padding: 24rpx 32rpx;
}

/* 左滑容器 */
.swipe-wrapper {
  margin-bottom: 20rpx;
}

.swipe-container {
  position: relative;
  overflow: hidden;
  border-radius: 24rpx;
}

.swipe-content {
  position: relative;
  z-index: 2;
  background: #f9fafb;
}

.swipe-content.swipe-animating {
  transition: transform .25s ease;
}

.swipe-actions {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  z-index: 1;
  overflow: hidden;
  border-radius: 0 24rpx 24rpx 0;
}

.swipe-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  gap: 12rpx;
}

.swipe-btn--rewrite {
  background: linear-gradient(180deg, #3b82f6, #2563eb);
}

.swipe-btn--delete {
  background: linear-gradient(180deg, #ef4444, #dc2626);
}

.swipe-btn-circle {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swipe-btn-circle--rewrite {
  background: rgba(255, 255, 255, .2);
}

.swipe-btn-circle--delete {
  background: rgba(255, 255, 255, .2);
}

.swipe-btn-svg {
  width: 36rpx;
  height: 36rpx;
}

.swipe-btn-label {
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.swipe-btn-label--rewrite {
  color: rgba(255, 255, 255, .9);
}

.swipe-btn-label--delete {
  color: rgba(255, 255, 255, .9);
}

.decision-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, .04);
}

/* 示例决策卡片 */
.decision-card--sample {
  border: 2rpx solid #e0e7ff;
  background: linear-gradient(135deg, #fefefe 0%, #f5f3ff 100%);
}

.sample-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(90deg, #ede9fe, #e0e7ff);
  border-radius: 12rpx;
  align-self: flex-start;
}

.sample-badge-icon {
  font-size: 24rpx;
}

.sample-badge-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #6d28d9;
}

.card-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.card-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-waiting {
  background: #f3f4f6;
  color: #6b7280;
}

.status-overdue {
  background: #fef3c7;
  color: #d97706;
}

.status-reviewed {
  background: #d1fae5;
  color: #059669;
}

.card-date {
  font-size: 22rpx;
  color: #9ca3af;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-meta {
  margin-bottom: 12rpx;
}

.card-choice {
  font-size: 24rpx;
  color: #6b7280;
}

.card-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-tags {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.card-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: #eff6ff;
  color: #2563eb;
  border-radius: 8rpx;
}

.card-emotion {
  font-size: 22rpx;
  color: #6b7280;
}

.card-review-date {
  font-size: 22rpx;
  color: #9ca3af;
}

.card-action-hint {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.action-arrow {
  font-size: 26rpx;
  color: #d97706;
  font-weight: 500;
}

.action-arrow-early {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 提前复盘醒目引导 */
.early-review-guide {
  margin-top: 16rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #eff6ff 0%, #ede9fe 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.early-review-guide-inner {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  flex: 1;
}

.early-review-guide-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.early-review-guide-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.early-review-guide-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e40af;
}

.early-review-guide-desc {
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.4;
}

.early-review-guide-dismiss {
  font-size: 22rpx;
  color: #6b7280;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, .7);
  border-radius: 10rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

/* 左滑引导提示 */
.swipe-hint {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.swipe-hint-text {
  font-size: 24rpx;
  color: #6d28d9;
  font-weight: 500;
}

.swipe-hint-dismiss {
  font-size: 24rpx;
  color: #9ca3af;
  padding: 4rpx 16rpx;
  background: #f3f4f6;
  border-radius: 8rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: #2563eb;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 48rpx;
  border-radius: 20rpx;
  border: 0;
}

/* 加载中 */
.loading-more {
  text-align: center;
  padding: 32rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: calc(60rpx + env(safe-area-inset-bottom));
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: #2563eb;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, .3);
  z-index: 100;
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}
