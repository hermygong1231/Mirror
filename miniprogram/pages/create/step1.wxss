/* pages/create/step1.wxss */
.page-container {
  min-height: 100vh;
  background: #f9fafb;
  padding-bottom: 120rpx;
}

/* 进度条 */
.progress-bar {
  padding: 32rpx 48rpx;
  background: #fff;
}

.progress-steps {
  display: flex;
  align-items: center;
  justify-content: center;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.step-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #e5e7eb;
  color: #9ca3af;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.step.active .step-dot {
  background: #2563eb;
  color: #fff;
}

.step-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.step.active .step-label {
  color: #2563eb;
  font-weight: 500;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #e5e7eb;
  margin: 0 16rpx;
  margin-bottom: 30rpx;
}

/* 表单区 */
.form-section {
  padding: 24rpx 32rpx;
}

/* 决策日期 */
.date-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0 20rpx;
}

.date-label {
  font-size: 26rpx;
  color: #6b7280;
}

.date-picker-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
}

.date-value {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
}

.date-arrow {
  font-size: 18rpx;
  color: #9ca3af;
}

.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.label-required {
  color: #ef4444;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  box-sizing: border-box;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all .2s;
}

.option-row.option-chosen {
  border-color: #2563eb;
  background: #eff6ff;
}

.option-radio {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 3rpx solid #d1d5db;
  transition: all .2s;
}

.radio-dot.radio-active {
  border-color: #2563eb;
  background: #2563eb;
  box-shadow: inset 0 0 0 4rpx #fff;
}

.option-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
  height: 56rpx;
}

.option-delete {
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  font-size: 36rpx;
  color: #9ca3af;
}

.add-option {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  margin-top: 16rpx;
  color: #2563eb;
  font-size: 28rpx;
  border: 2rpx dashed #93c5fd;
  border-radius: 16rpx;
  background: #f0f7ff;
}

.add-icon {
  font-size: 32rpx;
  font-weight: 600;
}

/* 提示 */
.form-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.hint-icon {
  font-size: 28rpx;
}

/* AI标签 */
.tags-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  opacity: .7;
  transition: all .4s ease;
}

.tags-section.tags-visible {
  opacity: 1;
}

.tags-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tags-header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tags-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.tags-badge {
  font-size: 20rpx;
  color: #2563eb;
  background: #eff6ff;
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.tags-hint {
  font-size: 22rpx;
  color: #9ca3af;
}

.loading-dot {
  display: inline-block;
  animation: blink .8s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: .3; }
}

.tags-expand-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
  padding: 8rpx 16rpx;
  background: #f3f4f6;
  border-radius: 20rpx;
}

.tags-expand-btn .tag-arrow {
  font-size: 18rpx;
  color: #9ca3af;
}

.tags-hint-link {
  font-size: 22rpx;
  color: #6b7280;
}

.tags-content {
  animation: tagsFadeIn .4s ease;
}

@keyframes tagsFadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tags-row {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag-chip-wrapper {
  flex: 1;
  min-width: 0;
}

.tag-chip {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  padding: 16rpx 12rpx;
  border-radius: 16rpx;
  background: #f3f4f6;
  transition: all .3s ease;
}

.tag-chip--ai {
  background: #eff6ff;
  border: 2rpx solid #bfdbfe;
  animation: chipPopIn .4s cubic-bezier(.34, 1.56, .64, 1);
}

.tag-chip--manual {
  background: #f0fdf4;
  border: 2rpx solid #bbf7d0;
}

.tag-chip--empty {
  background: #f9fafb;
  border: 2rpx dashed #e5e7eb;
}

@keyframes chipPopIn {
  from {
    opacity: 0;
    transform: scale(.85);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.tag-chip-label {
  font-size: 20rpx;
  color: #9ca3af;
}

.tag-chip--ai .tag-chip-label {
  color: #60a5fa;
}

.tag-chip--manual .tag-chip-label {
  color: #4ade80;
}

.tag-chip-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.tag-chip--ai .tag-chip-value {
  color: #2563eb;
}

.tag-chip--manual .tag-chip-value {
  color: #16a34a;
}

.tag-chip-placeholder {
  color: #d1d5db;
  font-weight: 400;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, .06);
}

.btn-next {
  width: 100%;
  height: 96rpx;
  background: #2563eb;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}

.btn-next.btn-disabled {
  background: #93c5fd;
  opacity: .6;
}
