/* pages/create/step3.wxss */
.page-container {
  min-height: 100vh;
  background: #f9fafb;
  padding-bottom: 140rpx;
}

.progress-bar {
  padding: 32rpx 48rpx;
  background: #fff;
}

.progress-steps {
  display: flex;
  align-items: center;
  justify-content: center;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.step-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #e5e7eb;
  color: #9ca3af;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.step.active .step-dot {
  background: #2563eb;
  color: #fff;
}

.step.done .step-dot {
  background: #22c55e;
  color: #fff;
  font-size: 22rpx;
}

.step-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.step.active .step-label {
  color: #2563eb;
  font-weight: 500;
}

.step.done .step-label {
  color: #22c55e;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #e5e7eb;
  margin: 0 16rpx;
  margin-bottom: 30rpx;
}

.step-line-active {
  background: #22c55e;
}

.form-section {
  padding: 24rpx 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  padding: 8rpx 0 24rpx;
}

.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.label-required {
  color: #ef4444;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  box-sizing: border-box;
}

/* 复盘时间 */
.period-grid {
  display: flex;
  gap: 16rpx;
}

.period-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 16rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all .2s;
}

.period-btn.period-active {
  border-color: #2563eb;
  background: #eff6ff;
}

.period-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
}

.period-btn.period-active .period-label {
  color: #2563eb;
}

.review-date-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #6b7280;
}

.date-icon {
  font-size: 28rpx;
}

/* 底部 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, .06);
}

.btn-row {
  display: flex;
  gap: 20rpx;
}

.btn-back {
  flex: 1;
  height: 96rpx;
  background: #f3f4f6;
  color: #374151;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}

.btn-submit {
  flex: 2;
  height: 96rpx;
  background: #22c55e;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}

.btn-submit.btn-disabled {
  background: #86efac;
  opacity: .6;
}

/* 提交成功引导页 */
.success-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #f9fafb;
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}

.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 48rpx;
  width: 100%;
  box-sizing: border-box;
}

.success-icon-wrap {
  margin-bottom: 24rpx;
}

.success-icon {
  font-size: 96rpx;
}

.success-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 12rpx;
}

.success-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 56rpx;
  text-align: center;
}

.success-guide-card {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, .06);
  margin-bottom: 32rpx;
}

.guide-card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.guide-card-icon {
  font-size: 36rpx;
}

.guide-card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.guide-card-desc {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 28rpx;
  display: block;
}

.guide-btn-primary {
  width: 100%;
  height: 88rpx;
  background: #2563eb;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 18rpx;
  border: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-btn-secondary {
  margin-top: 8rpx;
  background: transparent;
  color: #6b7280;
  font-size: 28rpx;
  border: 0;
  padding: 20rpx;
}
