/* pages/create/step2.wxss */
.page-container {
  min-height: 100vh;
  background: #f9fafb;
  padding-bottom: 260rpx;
}

/* 进度条 */
.progress-bar {
  padding: 32rpx 48rpx;
  background: #fff;
}

.progress-steps {
  display: flex;
  align-items: center;
  justify-content: center;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.step-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #e5e7eb;
  color: #9ca3af;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.step.active .step-dot {
  background: #2563eb;
  color: #fff;
}

.step.done .step-dot {
  background: #22c55e;
  color: #fff;
  font-size: 22rpx;
}

.step-label {
  font-size: 22rpx;
  color: #9ca3af;
}

.step.active .step-label {
  color: #2563eb;
  font-weight: 500;
}

.step.done .step-label {
  color: #22c55e;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #e5e7eb;
  margin: 0 16rpx;
  margin-bottom: 30rpx;
}

.step-line-active {
  background: #22c55e;
}

/* 表单 */
.form-section {
  padding: 24rpx 32rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  padding: 8rpx 0 24rpx;
}

.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.label-required {
  color: #ef4444;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  box-sizing: border-box;
}

/* 担心区域特殊样式 */
.concern-group {
  border-left: 6rpx solid #f59e0b;
}

.concern-textarea {
  background: #fffbeb;
}

/* 情绪选择 */
.emotion-grid {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.emotion-btn {
  flex: 1;
  min-width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 12rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all .2s;
}

.emotion-btn.emotion-active {
  border-color: #2563eb;
  background: #eff6ff;
}

.emotion-emoji {
  font-size: 48rpx;
}

.emotion-label {
  font-size: 24rpx;
  color: #374151;
}

.emotion-note-input {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #6b7280;
}

/* 底部 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, .06);
  z-index: 100;
}

.btn-row {
  display: flex;
  gap: 20rpx;
}

.btn-back {
  flex: 1;
  height: 96rpx;
  background: #f3f4f6;
  color: #374151;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}

.btn-next {
  flex: 2;
  height: 96rpx;
  background: #2563eb;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 0;
}

.btn-next.btn-disabled {
  background: #93c5fd;
  opacity: .6;
}
